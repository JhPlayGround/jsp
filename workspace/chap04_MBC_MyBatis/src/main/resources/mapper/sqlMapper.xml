<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.member.vo.MemberVO">
    <!-- table 속성와 bean 속성과의 매핑 -->
	<resultMap id="MemberMap" type="com.example.member.vo.MemberVO">
		<result property="id" column="id" />
		<result property="pwd" column="pwd" />
		<result property="name" column="name" />
	</resultMap>
	<select id="memberList" resultMap="MemberMap">
		select * from member
	</select>
	
	<select id="memberOne" parameterType="String" resultType="com.example.member.vo.MemberVO">
		select * from member where id = #{uid}
	</select>
	
	<select id="memberInsert" parameterType="com.example.member.vo.MemberVO">
		insert into member (id,pwd,name) values(#{id},#{pwd},#{name})
	</select>
	
	<select id="memberUpdate" parameterType="com.example.member.vo.MemberVO">
		update member set pwd=#{pwd}, name = #{name} where id = #{id}
	</select>
	
	<select id="memberDelete" parameterType="com.example.member.vo.MemberVO">
		delete from member where id = #{id}
	</select>
	
</mapper>